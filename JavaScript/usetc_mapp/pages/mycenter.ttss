body {
    background-color: lemonchiffon;
  }
.center-background{
    background-image: linear-gradient(
        10deg,
        #00D0B6 0%,#46EBD5 10%, #FFFFFF 45%,#FFFFFF 50%);
        padding-left:60rpx;padding-right:60rpx;padding-top:32rpx;
}
.HeadPortrait{
    /* position: absolute; */
    border-radius: 50%;
    height: 180rpx;
    width: 180rpx;
    /* left: 550rpx;
