    float:right;

}
.Name{
    font-family:sans-serif;
    font-weight: bold;
    font-size:40rpx;
    color: #000;
    display: inline-block;
    
}
.School{
    padding-left:40rpx;
    
    font-family:sans-serif;
    font-weight: normal;
    font-size: medium;
    color: #999;
    display: inline-block;
}
.StudentNumber{
    margin-top: 16rpx;

    font-family:sans-serif;
    font-weight: normal;
    font-size: 20rpx;
    color: #999;
    display: inline-block;
}
.basic_info_warning{
    margin-left: 30rpx;
    color: #F00;
    font-weight: normal;
    font-size: 20rpx;
